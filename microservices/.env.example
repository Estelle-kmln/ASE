# Environment configuration for microservices

# Database
DATABASE_URL=postgresql://gameuser:gamepassword@postgresql:5432/battlecards

# JWT Secret (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=your-super-secret-key-change-in-production-make-it-long-and-random

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://auth-service:5001
CARD_SERVICE_URL=http://card-service:5002
GAME_SERVICE_URL=http://game-service:5003
LEADERBOARD_SERVICE_URL=http://leaderboard-service:5004

# API Gateway
API_GATEWAY_URL=https://localhost:8443

# Game History Encryption Key (32-byte base64-encoded) - GENERATE YOUR OWN!
# Generate with: python -c "import base64, os; print(base64.urlsafe_b64encode(os.urandom(32)).decode())"
GAME_HISTORY_KEY=CHANGE_THIS_TO_YOUR_OWN_GENERATED_KEY

# Development settings
FLASK_ENV=production
FLASK_DEBUG=false