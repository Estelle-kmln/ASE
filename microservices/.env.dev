# Local development environment
# Copy this file to .env and modify as needed

# Database
DATABASE_URL=postgresql://gameuser:gamepassword@localhost:5432/battlecards

#Database for card-service
ENV CARD_DB_NAME=card_db
ENV DB_USER=gameuser
ENV DB_PASSWORD=gamepassword
ENV DB_HOST=postgresql
ENV DB_PORT=5432

# JWT Secret - Generate a secure random key for production
JWT_SECRET_KEY=dev-secret-key-change-me-in-production

# Service URLs for development (when running services individually)
AUTH_SERVICE_URL=http://localhost:5001
CARD_SERVICE_URL=http://localhost:5002
GAME_SERVICE_URL=http://localhost:5003
LEADERBOARD_SERVICE_URL=http://localhost:5004

# API Gateway
API_GATEWAY_URL=https://localhost:8443

# Development settings
FLASK_ENV=development
FLASK_DEBUG=true